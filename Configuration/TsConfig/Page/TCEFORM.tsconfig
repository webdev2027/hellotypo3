#################
### TCEFORM : https://docs.typo3.org/m/typo3/reference-tsconfig/master/en-us/PageTsconfig/TceForm.html
#################

TCEFORM {
	tt_content {

		layout {
			removeItems = 1,2,3
			altLabels {
				1 = LLL:EXT:hellotypo3/Resources/Private/Language/backend.xlf:layout.1
				2 = LLL:EXT:hellotypo3/Resources/Private/Language/backend.xlf:layout.2
				3 = LLL:EXT:hellotypo3/Resources/Private/Language/backend.xlf:layout.3
			}
			#addItems {
			#	4 = LLL:EXT:hellotypo3/Resources/Private/Language/backend.xlf:layout.4
            #	5 = LLL:EXT:hellotypo3/Resources/Private/Language/backend.xlf:layout.5
            #	6 = Inhaltselement mit Abstand
            #}
		}

		frame_class {
			removeItems = ruler-before,ruler-after,indent,indent-left,indent-right,none

			altLabels {
			    default      = LLL:EXT:hellotypo3/Resources/Private/Language/backend.xlf:tceform.frame_class.default
				ruler-before = LLL:EXT:hellotypo3/Resources/Private/Language/backend.xlf:tceform.frame_class.ruler-before
				ruler-after  = LLL:EXT:hellotypo3/Resources/Private/Language/backend.xlf:tceform.frame_class.ruler-after
				indent       = LLL:EXT:hellotypo3/Resources/Private/Language/backend.xlf:tceform.frame_class.ident
				indent-left  = LLL:EXT:hellotypo3/Resources/Private/Language/backend.xlf:tceform.frame_class.ident-left
				indent-right = LLL:EXT:hellotypo3/Resources/Private/Language/backend.xlf:tceform.frame_class.ident-right
				none         = LLL:EXT:hellotypo3/Resources/Private/Language/backend.xlf:tceform.frame_class.none
			}
			#addItems {
			#    frame1 = LLL:EXT:hellotypo3/Resources/Private/Language/backend.xlf:tceform.frame_class.add1
            #}
		}

		space_before_class {
		    removeItems = extra-small
		}

		space_after_class {
		    removeItems = extra-small

		    addItems {
                mb0 = LLL:EXT:hellotypo3/Resources/Private/Language/backend.xlf:tceform.space_after_class.own1
            }
		}

		header_layout {

			altLabels {
        		0 = LLL:EXT:hellotypo3/Resources/Private/Language/backend.xlf:header.0
        		1 = LLL:EXT:hellotypo3/Resources/Private/Language/backend.xlf:header.1
        		2 = LLL:EXT:hellotypo3/Resources/Private/Language/backend.xlf:header.2
        		3 = LLL:EXT:hellotypo3/Resources/Private/Language/backend.xlf:header.3
        		4 = LLL:EXT:hellotypo3/Resources/Private/Language/backend.xlf:header.4
        		5 = LLL:EXT:hellotypo3/Resources/Private/Language/backend.xlf:header.5
        		100 = LLL:EXT:hellotypo3/Resources/Private/Language/backend.xlf:header.hidden
        	}
        	removeItems = 1,2,3,4,5

			### https://jweiland.net/typo3/codebeispiele/typoscript/zusaetzliche-ueberschriften.html#c3341
        	#addItems.6 = LLL:EXT:hellotypo3/Resources/Private/Language/backend.xlf:header.6
        	#addItems.7 = LLL:EXT:hellotypo3/Resources/Private/Language/backend.xlf:header.7
		}


		header_position {
		    removeItems = right, left, center
		}


        #imageborder {
        #    label = LLL:EXT:hellotypo3/Resources/Private/Language/backend.xlf:imageborder.name
        #}


		imageorient {
			removeItems = 1,9

			altLabels {
				# 0 = Oben mittig
				# 1 = Oben rechts
				# 2 = Oben links

				# 8 = Unten mittig
				# 9 = Unten rechts
				# 10 = Unten links

				# 17 = Im Text rechts
				# 18 = Im Text links

				# 25 = Neben dem Text rechts
				# 26 = Neben dem Text links
			}

			### https://docs.typo3.org/typo3cms/TSconfigReference/PageTsconfig/TCEform/Index.html
            #disableNoMatchingValueElement = 1
            ###addItems.90 =  Spezial
		}



	} // tt_content

} // TCEFORM